{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es6",                                 
    /* Modules */
    "module": "commonjs",                                
    "esModuleInterop": true,                          
    // "preserveSymlinks": true,                     
    "forceConsistentCasingInFileNames": true,          
    /* Type Checking */
    "strict": true,                                   
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
